<h1>Nouveau PNJ</h1>

<%= form_with(model: @pnj, url: create_pnj_quete_etape_quete_etape_path, method: :post) do |form| %>
  <%= form.hidden_field :etape_id, value: params[:id] %>

  <%= form.label :nom %>
  <%= form.text_field :nom %>

  <%= form.label :vie %>
  <%= form.number_field :vie %>

  <%= form.label :force %>
  <%= form.number_field :force %>

  <%= form.label :avatar %>
  <%= form.text_field :avatar %>

  <%= form.submit "CrÃ©er le PNJ" %>
<% end %>

<h2>Liste des PNJ</h2>
<ul>
  <% @pnjs.each do |pnj| %>
    <li><%= pnj.nom %></li>
    <li>Vie : <%= pnj.vie %></li>
    <li>Force : <%= pnj.force %></li>
    <li>Avatar : <%= pnj.avatar %></li>
