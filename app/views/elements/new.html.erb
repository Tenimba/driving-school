<!-- app/views/elements/new.html.erb -->
<h1>Create New Element</h1>

<%= form_with(model: [@quete, @element], local: true, html: { multipart: true }) do |form| %>
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :force %>
    <%= form.text_field :force %>
  </div>

  <div class="field">
    <%= form.label :vie %>
    <%= form.text_field :vie %>
  </div>

  <div class="field">
    <%= form.label :xpplus %>
    <%= form.text_field :xpplus %>
  </div>
  <div class="field">
  <%= form.label :element_type %>
  <%= form.select :element_type, Element.element_types.keys.map { |type| [type.capitalize, type] } %>
</div>


  <div class="actions">
    <%= form.submit 'Create Element' %>
  </div>
<% end %>

<%= link_to 'Back to Quete', @quete %>
